+#include "sbc-imx8.dts"
+
+/ {
+    model = "CompuLab CL-SOM-iMX8 rev1.1 on SBC-iMX8 (pcie-ir-bypass)";
+    compatible = "compulab,sbc-imx8", "compulab,cl-som-imx8,rev1.1", "compulab,cl-som-imx8", "fsl,imx8mq";
+};
+
+&pcie0 {
+	fsl,ir-bypass = <1>;
+	status = "okay";
+};
+
+&pcie1 {
+	fsl,ir-bypass = <1>;
+	status = "okay";
+};
