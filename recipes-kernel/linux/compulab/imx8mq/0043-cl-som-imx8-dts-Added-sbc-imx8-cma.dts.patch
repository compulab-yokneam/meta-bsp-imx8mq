+#include "sbc-imx8.dts"
+
+&resmem {
+    linux,cma {
+        compatible = "shared-dma-pool";
+        reusable;
+        size = <0 0x28000000>;
+        alloc-ranges = <0 0x40000000 0 0x40000000>;
+        linux,cma-default;
+    };
+};
